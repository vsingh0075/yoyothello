<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/spacethellotheme"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:paddingLeft="70sp"

                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sun"
                    android:onClick="buttonclick"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20sp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60sp"
                    android:layout_marginLeft="20sp"
                    android:onClick="buttonclick"
                    android:background="@drawable/moon"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20sp"
            android:paddingLeft="60sp"
            android:paddingRight="30sp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose your coin"
            android:textSize="20dp"
            android:paddingLeft="38sp"
            android:textColor="@android:color/holo_red_dark"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        >
        <Button
            android:layout_marginTop="100sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show legal moves"
            android:textColor="@android:color/white"
            android:background="@drawable/selector"
            android:id="@+id/legalmoves"
            />
        <Button
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset to default"
            android:background="@drawable/selector"
            android:textColor="@android:color/white"
            android:id="@+id/defaults"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:background="@drawable/selector"
            android:id="@+id/ok"
            />
            <Button
                android:layout_marginTop="20sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="back"
                android:textColor="@android:color/white"
                android:background="@drawable/selector"
                android:layout_marginLeft="40dp"
                android:id="@+id/back"
                android:onClick="back"
                />
        </LinearLayout>
        <ImageView
            android:paddingTop="50sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="250sp"
            android:id="@+id/image"
            android:onClick="soundbutton"
            android:src="@drawable/sound"/>
    </LinearLayout>
    </LinearLayout>