<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/spacethellotheme"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:paddingLeft="70sp"

                android:layout_weight="1"
                android:weightSum="1">
                <ToggleButton
                    android:id="@+id/sunbtn"
                    android:textOn=""
                    android:textOff=""
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sunselector"
                    android:onClick="sunClick"
                    android:checked="false"
                    android:layout_weight="0.14" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20sp"
                android:orientation="horizontal"
                android:weightSum="1">
                <ToggleButton
                    android:id="@+id/moonbtn"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60sp"
                    android:layout_marginLeft="20sp"
                    android:textOn=""
                    android:textOff=""
                    android:onClick="moonClick"
                    android:background="@drawable/moonselector"
                    android:layout_weight="0.08" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20sp"
            android:paddingLeft="60sp"
            android:paddingRight="30sp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose your coin"
            android:textSize="20dp"
            android:paddingLeft="38sp"
            android:textColor="@android:color/holo_red_dark"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:weightSum="1">
        <Switch

            android:layout_marginTop="75sp"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:text="  SHOW LEGAL MOVES"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="#800000"
            android:thumb="@drawable/switcher"
            android:id="@+id/legalmoves"
            android:checked="true"
            android:onClick="switcher_legal_moves"

            android:layout_weight="0.15" />
        <Button
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="Reset to default"
            android:onClick="Resetbtn"
            android:background="#800000"
            android:fadingEdge="horizontal"
            android:textColor="@android:color/white"
            android:id="@+id/defaults"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
            android:onClick="applyclicked"
            android:layout_marginTop="38sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APPLY CHANGES"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:background="@drawable/selector"
            android:id="@+id/applybtn"
            />
            <Button
                android:layout_marginTop="38sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CANCEL"
                android:textColor="@android:color/white"
                android:background="@drawable/selector"
                android:layout_marginLeft="40dp"
                android:id="@+id/cancel"
                android:onClick="back"
                />
        </LinearLayout>
        <ImageView
            android:paddingTop="50sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="250sp"
            android:id="@+id/image_sound"
            android:onClick="soundbutton"

           />
    </LinearLayout>
    </LinearLayout>