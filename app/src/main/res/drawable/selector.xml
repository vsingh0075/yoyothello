<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_enabled="false" >
        <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="0dip"
                android:topRightRadius="8dip"
                android:bottomLeftRadius="8dip"
                android:bottomRightRadius="0dip" />
            <stroke android:width="1dip" android:color="#B0C4DE" />
            <gradient  android:angle="-90"  android:startColor="#B0C4DE" android:endColor="#B0C4DE"  />
        </shape>
    </item>
    <item android:state_pressed="true"
        android:state_enabled="true">
        <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="0dip"
                    android:topRightRadius="8dip"
                android:bottomLeftRadius="8dip"
                android:bottomRightRadius="0dip"
                />
            <stroke android:width="1dip" android:color="#B22222" />
            <solid  android:color="#F0000F"/>
        </shape>
    </item>
    <item
        android:state_enabled="true">
        <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="0dip"
                android:topRightRadius="8dip"
                android:bottomLeftRadius="8dip"
                android:bottomRightRadius="0dip" />
            <stroke android:width="1dip" android:color="#ffffff" />
            <gradient  android:angle="90"  android:startColor="#800000" android:endColor="#8F0040" />
        </shape>
    </item>
</selector>